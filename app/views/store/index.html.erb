
<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %><br>
<% end %>

<% @items.each do |item| %>
  <% if item.inventory > 0 %>
    <p><%= item.title %> | <%= number_to_currency(item.price.to_f/100) %> | <%= item.inventory %> available | <% if current_user %>  <%= button_to 'Add to Cart', line_items_path(item_id: item.id) %> <% end %></p>
  <% end %>
<% end %>